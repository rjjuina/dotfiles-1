defaults
port 587
auth on
tls on
tls_trust_file /etc/ssl/certs/ca-bundle.crt

account gmail
host smtp.gmail.com
from xiongchenyu6@gmail.com
user xiongchenyu6@gmail.com
passwordeval gpg2 -q --pinentry-mode loopback --for-your-eyes-only --no-tty -d ~/.password/gmail.gpg

account office
host smtp.office365.com
from cxiong001@e.ntu.edu.sg
user cxiong001@e.ntu.edu.sg
passwordeval gpg2 -q --pinentry-mode loopback --for-your-eyes-only --no-tty -d ~/.password/office.gpg

account default : gmail
