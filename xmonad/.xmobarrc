Config {
        font = "xft:Consolas\-with\-Yahei:size=12"
      , borderColor = "black"
      , border = TopB
      , bgColor = "black"
      , fgColor = "grey"
      , position = TopW L 100
      -- general behavior
      , lowerOnStart =     True    -- send to bottom of window stack on start
      , hideOnStart =      False   -- start with window unmapped (hidden)
      , allDesktops =      True    -- show on all desktops
      , overrideRedirect = True    -- set the Override Redirect flag (Xlib)
      , pickBroadest =     True   -- choose widest display (multi-monitor)
      , persistent =       True    -- enable/disable hiding (True = disabled)
      , template = "%StdinReader%|%memory%|%dynnetwork%|%myvolume%|%bright%|%coretemp%}{<fc=#ee9a00>%date%</fc>"
      , sepChar = "%"
      , alignSep = "}{"
      , commands = [ 
                      -- network activity monitor (dynamic interface resolution)
                        Run DynNetwork     [ "--template" , "<dev>: <tx>kB/s|<rx>kB/s"
                                            , "--Low"      , "1000"       -- units: kB/s
                                            , "--High"     , "5000"       -- units: kB/s
                                            , "--low"      , "green"
                                            , "--normal"   , "orange"
                                            , "--high"     , "red"
                                            ] 10
                      -- cpu activity monitor
                      --, Run MultiCpu       [ "--template" , "Cpu: <total0>%|<total1>%"
                      --                      , "--Low"      , "50"         -- units: %
                      --                      , "--High"     , "85"         -- units: %
                      --                      , "--low"      , "green"
                      --                      , "--normal"   , "orange"
                      --                      , "--high"     , "red"
                      --                      ] 10
                      --  %multicpu% |
                      -- cpu core temperature monitor
                      , Run CoreTemp       [ "--template" , "Temp: <core0>째C|<core1>째C"
                                            , "--Low"      , "70"        -- units: 째C
                                            , "--High"     , "80"        -- units: 째C
                                            , "--low"      , "green"
                                            , "--normal"   , "orange"
                                            , "--high"     , "red"
                                            ] 50
                      , Run Memory ["-t","Mem: <usedratio>%"] 10
                      , Run Com "uname" ["-s","-r"] "" 36000
                      , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
	                    , Run Com "/bin/bash" ["-c", "~/.script/get-volume.sh"]  "myvolume" 1
                      , Run Brightness ["--template", "Bl: <vbar>", "--", "-D", "intel_backlight"] 3
                      , Run StdinReader
                      ]
      }
