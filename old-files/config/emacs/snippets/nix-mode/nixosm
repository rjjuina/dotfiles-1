# -*- mode: snippet -*-
# name: nixos module basic template
# key: nixosm
# --
{ config, lib, pkgs, ... }:
with lib;
let
cfg = config.services.$1;
in
{
options.services.$1 = {
enable = mkEnableOption "Enables $1 service";
};
config = {
systemd.services = mkIf cfg.enable {
"$1" = {
description = "$1 Service Daemon";
path = [ ];
wantedBy = [ "multi-user.target" ];
after = [ "networking.target" ];
script = ''
'';
};
};
};
}





